<!DOCTYPE html>
<html lang="en">
    
    <%- include('partials/head.ejs') %>

<body>
    <%- include('partials/header.ejs') %>
    <form action="/users/perfil" method="post">
        <div class="form-group">
            <% if (typeof errors !== 'undefined') { errors.map(function(error) { %>
                
                <p><%error.msg %></p>
                <% })
                
            }%>
            <label for="">Ingrese su Nombre</label>
            <input type="text" name="name" class="form-control" 
                   value="<%= typeof data != 'undefined' ? data.name: '' %>">
                   <label for="">Ingrese su Apellido</label>
            <input type="text" name="first-name" class="form-control" 
                   value="<%= typeof data != 'undefined' ? data.first-name: '' %>">
                   <label for="">Ingrese su n√∫mero de telefono</label>
            <input type="tel" name="telephone" class="form-control" 
                   value="<%= typeof data != 'undefined' ? data.telephone: '' %>">
    
        </div>
        <div class="form-group">
            <button class="btn-btn-primary" ><a href="/">Enviar</a></button>
        </div>
    </form>
    <%- include('partials/scripts.ejs') %>
</body>
</html>